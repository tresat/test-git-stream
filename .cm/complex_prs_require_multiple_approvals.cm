# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
  double_review:
    if:
      - {{ branch | estimatedReviewTime >= 45 }}
      - {{ files | length >= 20 }}
      - {{ includes_src_changes }}
    run:
      - action: set-required-approvals@v1
        args:
          approvals: 2

includes_src_changes:
  {{ files | match(regex=r/src\//) | some }}
